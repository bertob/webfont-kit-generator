<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Window" parent="AdwApplicationWindow">
    <property name="default_width">800</property>
    <property name="default_height">600</property>
    <property name="content">
      <object class="GtkStack" id="appstack">
        <property name="transition_type">crossfade</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">main</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="AdwHeaderBar" id="headerbar">
                    <property name="title-widget">
                      <object class="AdwViewSwitcher">
                        <property name="stack">viewstack</property>
                      </object>
                    </property>
                    <child>
                      <object class="GtkButton" id="btn_add_fonts">
                        <property name="action_name">win.open</property>
                        <property name="icon_name">list-add-symbolic</property>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkButton" id="btn_about">
                        <property name="action_name">app.about</property>
                        <property name="icon_name">preferences-system-details-symbolic</property>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkButton" id="btn_generate">
                        <property name="label" translatable="yes">Generate</property>
                        <property name="action_name">win.generate</property>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStack" id="viewstack">
                    <property name="vexpand">True</property>
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">main</property>
                        <property name="title" translatable="yes">Fonts</property>
                        <property name="icon-name">font-x-generic-symbolic</property>
                        <property name="child">
                          <object class="GtkBox" id="fonts_box">
                            <child>
                              <object class="GtkStack" id="fonts_stack">
                                <property name="transition_type">crossfade</property>
                                <property name="hexpand">True</property>
                                <child>
                                  <object class="GtkStackPage">
                                    <property name="name">empty</property>
                                    <property name="child">
                                      <object class="GtkBox">
                                        <property name="valign">center</property>
                                        <property name="orientation">vertical</property>
                                        <property name="spacing">48</property>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="label" translatable="yes">Add some fonts</property>
                                            <style>
                                              <class name="title"/>
                                              <class name="large-title"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkBox">
                                            <property name="halign">center</property>
                                            <child>
                                              <object class="GtkImage">
                                                <property name="icon_name">splash-a-symbolic</property>
                                                <property name="pixel_size">192</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkImage">
                                                <property name="icon_name">splash-b-symbolic</property>
                                                <property name="pixel_size">192</property>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkButton">
                                            <property name="label" translatable="yes">Open Fonts</property>
                                            <property name="halign">center</property>
                                            <property name="action_name">win.open</property>
                                            <style>
                                              <class name="suggested-action"/>
                                              <class name="rounded-button"/>
                                            </style>
                                          </object>
                                        </child>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkStackPage">
                                    <property name="name">fonts</property>
                                    <property name="child">
                                      <object class="GtkScrolledWindow">
                                      <child>
                                        <object class="GtkViewport">
                                          <child>
                                            <object class="AdwClamp">
                                              <property name="margin_start">24</property>
                                              <property name="margin_end">24</property>
                                              <child>
                                                <object class="GtkBox">
                                                  <property name="orientation">vertical</property>
                                                  <property name="margin_top">48</property>
                                                  <property name="margin_bottom">48</property>
                                                  <property name="spacing">48</property>
                                                  <child>
                                                    <object class="AdwPreferencesGroup">
                                                      <child>
                                                        <object class="AdwActionRow">
                                                          <property name="title" translatable="yes">Output directory</property>
                                                          <child>
                                                            <object class="GtkBox">
                                                              <property name="spacing">12</property>
                                                              <property name="valign">center</property>
                                                              <child>
                                                                <object class="GtkLabel" id="directory">
                                                                  <property name="label" translatable="yes">Select a directory</property>
                                                                  <property name="valign">center</property>
                                                                  <style>
                                                                    <class name="heading"/>
                                                                  </style>
                                                                </object>
                                                              </child>
                                                              <child>
                                                                <object class="GtkButton">
                                                                  <property name="label" translatable="yes">Browse...</property>
                                                                  <property name="action_name">win.set-outpath</property>
                                                                </object>
                                                              </child>
                                                            </object>
                                                          </child>
                                                        </object>
                                                      </child>
                                                    </object>
                                                  </child>
                                                  <child>
                                                    <object class="GtkBox">
                                                      <property name="orientation">vertical</property>
                                                      <child>
                                                        <object class="GtkLabel">
                                                          <property name="label" translatable="yes">Fonts</property>
                                                          <property name="halign">start</property>
                                                          <property name="margin-bottom">12</property>
                                                          <style>
                                                            <class name="heading"/>
                                                          </style>
                                                        </object>
                                                      </child>
                                                      <child>
                                                        <object class="GtkListView" id="fonts_list">
                                                          <style>
                                                            <class name="content"/>
                                                          </style>
                                                        </object>
                                                      </child>
                                                    </object>
                                                  </child>
                                                </object>
                                              </child>
                                            </object>
                                          </child>
                                        </object>
                                      </child>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">progress</property>
            <property name="child">
              <object class="GtkWindowHandle">
                <child>
                  <object class="AdwClamp">
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">12</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkProgressBar" id="progressbar">
                            <property name="show-text">True</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkBox">
                            <child>
                              <object class="GtkLabel" id="progressbar_label">
                                <style>
                                  <class name="dim-label"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="cancel">
                            <property name="label" translatable="yes">Cancel</property>
                            <property name="halign">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">finished</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="AdwHeaderBar">
                    <property name="title-widget">
                      <object class="AdwViewSwitcher">
                        <property name="stack">finished_viewstack</property>
                      </object>
                    </property>
                    <child>
                      <object class="GtkButton" id="btn_back">
                        <property name="action_name">win.back</property>
                        <property name="icon_name">go-previous-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStack" id="finished_viewstack">
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">info</property>
                        <property name="icon-name">emblem-default-symbolic</property>
                        <property name="title" translatable="yes">Information</property>
                        <property name="child">
                          <object class="GtkScrolledWindow">
                            <property name="vexpand">True</property>
                            <child>
                              <object class="GtkViewport">
                                <child>
                                  <object class="AdwStatusPage">
                                    <property name="title" translatable="yes">Generation finished!</property>
                                    <property name="icon-name">emblem-default-symbolic</property>
                                    <child>
                                      <object class="AdwClamp">
                                        <child>
                                          <object class="GtkBox">
                                            <property name="orientation">vertical</property>
                                            <property name="spacing">12</property>
                                            <property name="valign">center</property>
                                            <child>
                                              <object class="GtkLabel">
                                                <property name="label" translatable="yes">To link your fonts, copy the code below into the head of your HTML:</property>
                                                <property name="halign">start</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkBox" id="import_html_box"></object>
                                            </child>
                                            <child>
                                              <object class="GtkLabel">
                                                <property name="label" translatable="yes">Or import it directly to your CSS:</property>
                                                <property name="halign">start</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkBox" id="import_css_box"></object>
                                            </child>
                                            <child>
                                              <object class="GtkButton" id="open_files">
                                                <property name="label" translatable="yes">Open in Files</property>
                                                <property name="halign">center</property>
                                                <property name="margin_top">20</property>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">log</property>
                        <property name="icon-name">view-list-bullet-symbolic</property>
                        <property name="title" translatable="yes">Logs</property>
                        <property name="child">
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">6</property>
                            <child>
                              <object class="GtkScrolledWindow">
                                <property name="vexpand">True</property>
                                <child>
                                  <object class="GtkViewport">
                                    <child>
                                      <object class="AdwClamp" id="log_column">
                                        <property name="margin_top">20</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
